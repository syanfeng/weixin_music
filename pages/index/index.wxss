/**index.wxss**/
.container {
  background-color: #F8F8FF;
  min-height: 100%;
}

.search-content {
  width: 650rpx;
  background: #f2f2f2;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 70rpx;
  padding-top: auto;
  padding-bottom: auto;
  padding-left: 20rpx;
  margin: 15rpx auto;
  border-radius: 5px 5px;
}
.search-icon {
  margin-right: 20rpx;
}
.search-input {
  font-size: 24rpx;
}

.swiper-container {
  width: 750rpx;
  position: relative;
}
.swiper-box {
  width: 100%;
  height: 240rpx;
}
swiper-item .slide-image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 562.5rpx;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
} 
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .5;
} 
.swiper-container .dots .dot.active{  
  width: 14rpx;  
  opacity: 1;
}

.shotcuts {
  background: #fff;
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
}
.shotcuts-item {
  flex: 1;
}
.shotcuts-item icon{
  width: 100%;
  font-size: 54rpx;
  color: #666;
}
.shotcuts-item text {
  font-size: 20rpx;
}

.block {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.block-item {
  flex: 1;
  position: relative;
  overflow: hidden;
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
}
.block-item:last-child {
  margin-right: 0;
}
.block-item image {
  width: 100%;
  height: 100%;
}
.block-item text {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  font-size: 24rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  height: 50rpx;
  line-height: 50rpx;
}

.toutiao-container {
  width: 100%;
  height: 80rpx;
  background: #fff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.toutiao-swiper {
  width: 100%;
  height: 80rpx;
  position: relative;
}
.toutiao-item {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}
.toutiao-item image{
  width: 140rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.toutiao-content {
  flex: 1;
  font-size: 24rpx;
  margin-right: 60rpx;
}

.toutiao-item .iconfont{
  width: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  right: 10rpx;
  top: 0;
  color: #999;
}

.tap {
  display: inline-block;
  padding: 5rpx;
  background: #000;
  color: #fff;
  font-size: 16rpx;
  margin-right: 10rpx;
}

/* 歌曲列表  */
.audio-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.audio-item {
  width: 710rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.audio-item:last-child {
  border-bottom: 0;
}
.audio-poster {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.audio-content {
  flex: 1;
}
.audio-name {
  font-size: 28rpx;
  color: #000;
  margin-bottom: 15rpx;
}
.audio-author {
  font-size: 24rpx;
  color: #999;
}
